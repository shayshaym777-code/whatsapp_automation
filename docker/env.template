# ============================================
# WhatsApp Multi-Docker Automation System
# Docker Environment Configuration
# ============================================
# Copy this file to .env:
#   cp env.template .env
# ============================================

# ============================================
# DATABASE - PostgreSQL
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=whatsapp_automation
DB_USER=whatsapp
DB_PASSWORD=whatsapp123

# ============================================
# CACHE & QUEUE - Redis
# ============================================
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# MASTER SERVER
# ============================================
MASTER_PORT=5000
NODE_ENV=production
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production

# ============================================
# WORKER URLs (for Master to call Workers)
# ============================================
WORKER_US_URL=http://worker-1:3001
WORKER_IL_URL=http://worker-2:3001
WORKER_GB_URL=http://worker-3:3001
WORKER_1_URL=http://worker-1:3001
WORKER_2_URL=http://worker-2:3001
WORKER_3_URL=http://worker-3:3001

# ============================================
# ANTI-BAN SETTINGS
# ============================================
# Message delays (milliseconds)
MIN_DELAY_MS=1000
MAX_DELAY_MS=7000

# Break intervals
SHORT_BREAK_INTERVAL=10
SHORT_BREAK_MIN_MS=30000
SHORT_BREAK_MAX_MS=120000
LONG_BREAK_INTERVAL=50
LONG_BREAK_MIN_MS=300000
LONG_BREAK_MAX_MS=900000

# Daily limits
MAX_MESSAGES_PER_DAY=100
MAX_MESSAGES_PER_HOUR=20

# Trust score
TRUST_SCORE_MIN=20
TRUST_SCORE_WARNING=50

# ============================================
# WORKER 1 - USA (+1 numbers)
# ============================================
WORKER_1_ID=worker-1
WORKER_1_PORT=3001
WORKER_1_SEED=unique-seed-worker-1-usa-abc123
WORKER_1_COUNTRY=US

# ============================================
# WORKER 2 - Israel (+972 numbers)
# ============================================
WORKER_2_ID=worker-2
WORKER_2_PORT=3001
WORKER_2_SEED=unique-seed-worker-2-israel-xyz789
WORKER_2_COUNTRY=IL

# ============================================
# WORKER 3 - UK (+44 numbers)
# ============================================
WORKER_3_ID=worker-3
WORKER_3_PORT=3001
WORKER_3_SEED=unique-seed-worker-3-uk-qwe456
WORKER_3_COUNTRY=GB

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
DEBUG=false

