# ============================================
# WhatsApp Worker
# Environment Configuration
# ============================================
# Copy this file to .env:
#   cp env.template .env
# ============================================

# ============================================
# WORKER IDENTITY
# ============================================
# Unique identifier for this worker
WORKER_ID=worker-1

# HTTP port for this worker
WORKER_PORT=3001

# ============================================
# DEVICE FINGERPRINT
# ============================================
# CRITICAL: Each worker MUST have a unique seed!
# This generates a unique device fingerprint to avoid detection.
# Same seed = same fingerprint (deterministic)
# Different seeds = different fingerprints
DEVICE_SEED=unique-seed-here

# ============================================
# PROXY COUNTRY
# ============================================
# Country code for this worker's accounts
# Must match the phone number country prefix:
#   US = +1 numbers
#   IL = +972 numbers
#   GB = +44 numbers
#   DE = +49 numbers
#   FR = +33 numbers
PROXY_COUNTRY=US

# ============================================
# MASTER SERVER
# ============================================
# URL of the master server
MASTER_URL=http://master:5000

# ============================================
# PROXY CONFIGURATION (Optional)
# ============================================
# If using a proxy for this worker
PROXY_HOST=
PROXY_PORT=
PROXY_USER=
PROXY_PASS=
PROXY_TYPE=http

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
DEBUG=false

